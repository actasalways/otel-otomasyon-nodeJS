extends layout
    

block content 
    .ui.inverted.segment
        .ui.container
            .ui.grid
                .five.wide.column
                    h2 Müşteri Güncelleme
                .eleven.wide.column.right.floated 
                    .ui.fluid.action.inverted.transparent.input.big TC : 
                        input(type='text', placeholder=' Güncellenecek kişinin TC Kimlik Numarasını Giriniz...')
                        button.ui.inverted.button.red  Sil

    .ui.inverted.segment.center.aligned
        .ui.container
            br
            .ui.label.black.big Oda No :
            .ui.compact.menu
                .ui.simple.dropdown.item Oda No 
                    i.dropdown.icon
                    .menu
                        .item 101
                        .item 102
                        .item 103
                    //- each val in  rooms 
                    //-     option #{ val.no }
            br
            br
            .ui.label.black.big TC Kimlik No : 
            .ui.input
                input(type='text', placeholder='39944023936', name="tcno")
            br
            br
            .ui.label.big.black  Ad :
            .ui.input
                input(type='text', placeholder='Erdem', name="ad")
            br
            br
            .ui.label.big.black Soyad:
            .ui.input
                input(type='text', placeholder='Bektaş', name="soyad")
            br 
            br 
            .ui.label.big.black Telefon Numarası : 
            .ui.input
                input(type='text', placeholder='05544386850', name="telNo")
            br 
            br 
            .ui.label.big.black Kayıt Tarihi :
            .ui.compact.menu
                #standard_calendar.ui.calendar
                .ui.input.left.icon
                    i.calendar.icon
                    input#datepicker(type='text',placeholder='Date/Time')
            br 
            br 
            .ui.label.big.black Ücret :
            .ui.input
                input(type='text', placeholder='Ücret', name="ucret")
            br
            br
            .ui.label.big.black Ücret Alındı Mı
            .ui.label.big
                .ui.fitted.checkbox
                    input(type='checkbox', checked='false', name="odemeAlindiMi", value=false)
                    label 
            br
            br
            .ui.label.big
                .grouped.fields
                    label Ödeme Alındı mı ?
                    .field
                        .ui.radio.checkbox
                            input(type='radio', name='frequency')
                            label Alındı
                    .field
                        .ui.radio.checkbox
                            input(type='radio', name='frequency', checked='checked')
                            label Alınmadı
            br
            br
            button.ui.inverted.button.green Yeni Kayıt Al
            button.ui.inverted.button.grey Müşteri Listesine Dön
