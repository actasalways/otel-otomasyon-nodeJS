extends layout
    

block content 
    .ui.inverted.segment
        .ui.container
            .ui.grid
                .five.wide.column
                    h1 Müşteri işlemleri
                .eleven.wide.column.right.floated 
                    .ui.fluid.action.inverted.transparent.input
                        input(type='text', placeholder='Arama')
                        button.ui.inverted.button.secondary  Search

    .ui.inverted.segment
        .ui.grid
            .six.wide.column.grey 
                .ui.container 
                    br
                    .ui.label.black.big Oda No
                    .ui.compact.menu
                        .ui.simple.dropdown.item Oda No
                            i.dropdown.icon
                            .menu
                                .item 101
                                .item 102
                                .item 103
                            //- each val in  rooms 
                            //-     option #{ val.no }
                    br
                    br
                    .ui.label.black.big TC Kimlik No : 
                    .ui.input
                        input(type='text', placeholder='39944023936', name="tcno")
                    br
                    br
                    .ui.label.big.black  Ad :
                    .ui.input
                        input(type='text', placeholder='Erdem', name="ad")
                    br
                    br
                    .ui.label.big.black Soyad:
                    .ui.input
                        input(type='text', placeholder='Bektaş', name="soyad")
                    br 
                    br 
                    .ui.label.big.black Telefon Numarası : 
                    .ui.input
                        input(type='text', placeholder='05544386850', name="telNo")
                    br 
                    br 
                    .ui.label.big.black Date
                    .ui.compact.menu
                        #standard_calendar.ui.calendar
                        .ui.input.left.icon
                            i.calendar.icon
                            input#datepicker(type='text',placeholder='Date/Time')
                    br 
                    br 
                    .ui.label.big.black Ücret
                    .ui.input
                        input(type='text', placeholder='Ücret', name="ucret")
                br
                .ui.label.big.black Ücret Alındı Mı
                .ui.label.big
                    .ui.fitted.checkbox
                        input(type='checkbox', checked='false', name="odemeAlindiMi", value=false)
                        label 
                br
                br
                .ui.label.big
                    .grouped.fields
                        label Ödeme Alındı mı ?
                        .field
                            .ui.radio.checkbox
                                input(type='radio', name='frequency')
                                label Alındı
                        .field
                            .ui.radio.checkbox
                                input(type='radio', name='frequency', checked='checked')
                                label Alınmadı
                br
                br
                br
                button.ui.inverted.button.black  Odadan Çıkış Ver
                button.ui.inverted.button.black Yeni Kayıt Al
                button.ui.inverted.button.black  Güncelle
                br
                br
                
            .ten.wide.column.right.floated.grey 
                .ui.container
                    table.ui.inverted.table
                        thead
                            tr
                                th Oda No
                                th Name
                                th Surname
                                th Tel No
                        tbody
                         each val in  customer 
                              tr
                                    td #{ val.roomNo }
                                    td #{ val.name }
                                    td #{ val.surname }
                                    td #{ val.telno }
                        tfoot
                            tr
                                th Oda No
                                th Name
                                th Surname
                                th Tel No

                                            