extends layout

block content 
 form(method='post')                    
    .ui.inverted.segment
        .ui.container
            .ui.grid
                .five.wide.column
                    h1 Oda İşlemleri
                .eleven.wide.column.right.floated 
                    .ui.fluid.action.inverted.transparent.input
                        input(type='text', placeholder='Arama')
                        button.ui.inverted.button.secondary  Search
 
    .ui.inverted.segment
        .ui.grid
            .six.wide.column.grey 
                .ui.container 
                    br
                    .ui.label.black.big Oda No
                    .ui.compact.menu
                        .ui.simple.dropdown.item Oda No
                            i.dropdown.icon
                            .menu
                                each val in  rooms 
                                    .item  #{ val.no }
                    br
                    br
                    .ui.label.black.big Günlük Ücret : 
                    .ui.input
                        input(type='number',min="1", placeholder='200', name="guncelle_ucret" )
                    br
                    br
                    .ui.label.big.black  Odanın Kapasitesi:
                    .ui.input
                        input(type='number',min="1", placeholder='1', name="guncelle_odaKapasite" )
                br
                br
                button.ui.inverted.button.green  Oda Ücretini Güncelle
                br
                br
                button.ui.inverted.button.red  Odayı Sil
                br
                br
            .ten.wide.column.right.floated
                .ui.container
                    .ui.big.header.inverted Yeni Oda Ekleme
                    br 
                    .ui.label.black.big Oda No : 
                    .ui.input
                        input(type='number',min="100", placeholder='109', name="yeni_odaNo" )
                    br
                    .ui.big.header.red *İlk hane kat numarası, sonraki iki hane kattaki kaçıncı oda olduğunu belirtir.
                    .ui.big.header.red Örneğin 101 numaralı oda, 1. kat 1 numaralı oda demektir.
                    br
                    .ui.label.big.black  Günlük Ücret :
                    .ui.input
                        input(type='number',min="1", placeholder='200', name="yeni_odaGunlukUcret" )
                    br
                    br
                    .ui.label.big.black  Odanın Kapasitesi:
                    .ui.input
                        input(type='number',min="1", placeholder='1', name="yeni_odaKapasite" )
                br
                br
                button.ui.inverted.button.green(type='submit')  Yeni Oda Kaydet


